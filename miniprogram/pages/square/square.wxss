.flex {
  display: flex;
  align-items: center;
}

.text-cut {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

page {
  padding-top: 30rpx;
  background: #f7f7f7;
  line-height: 1;
  word-break: break-all;
}

.list-wrapper {
  padding: 0 30rpx;
}

.list-item {
  margin-bottom: 30rpx;
  padding: 30rpx 0;
  background: #fff;
  border-radius: 16rpx;
}

/* --- header wrapper ---- */
.header {
  padding: 0 30rpx;
  justify-content: space-between;
}

.header .name {
  color: #333333;
  max-width: 400rpx;
  font-size: 26rpx;
}

.header .tip {
  color: #999;
  font-size: 20rpx;
}

.header .avatar {
  margin-right: 20rpx;
  width: 72rpx;
  height: 72rpx;
  border: 1px solid #f1f1f1;
  border-radius: 50%;
}

.header .icon_gengduo {
  color: #C6C6C6;
  font-size: 12rpx;
}

/* --- title wrapper ---- */
.title-wrapper {
  padding: 20rpx 30rpx;
  line-height: 1.4;
}

.title-wrapper .icon_lujing2 {
  margin-right: 10rpx;
  color: #ff7b4b;
  font-size: 30rpx;
}

.title-wrapper .title {
  font-size: 32rpx;
  font-weight: bold;
}

/* --- main wrapper ---- */
.main-wrapper {
  padding: 0 30rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 1.4;
}

.main-wrapper .image-wrapper {
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
}

.main-wrapper .image-wrapper .image {
  margin: 0 10rpx 10rpx 0;
  width: 200rpx;
  height: 200rpx;
}

/* --- main wrapper ---- */
.footer-wrapper {
  justify-content: space-between;
  padding-top: 20rpx;
  padding-left: 30rpx;
  color: #999;
  font-size: 24rpx;
}

.operate-wrapper .operate-item {
  justify-content: center;
  width: 115rpx;
  height: 110rpx;
}

.operate-item .iconfonts {
  font-size: 40rpx;
}
